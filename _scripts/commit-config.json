{
  "max_files_per_commit": 15,
  "auto_push": false,
  "competition_mode": false,
  "notification_timeout": 30,
  "commit_patterns": {
    "feat": "add new features and functionality",
    "fix": "resolve bugs and issues",
    "docs": "update documentation",
    "style": "improve code formatting and style",
    "refactor": "restructure code without changing functionality",
    "test": "add or update tests",
    "chore": "maintain and update project dependencies",
    "ci": "update CI/CD configuration",
    "config": "update configuration files",
    "script": "update shell scripts and automation",
    "deps": "update project dependencies",
    "wip": "work in progress",
    "quick": "quick changes during development"
  },
  "scope_mapping": {
    "modulo1": "module1",
    "modulo2": "module2",
    "modulo3": "module3",
    "modulo4": "module4",
    "modulo5": "module5",
    "_scripts": "scripts",
    "_docs": "docs",
    "ejercicios": "exercises",
    "proyectos": "projects",
    "docs": "docs",
    "scripts": "scripts"
  },
  "file_type_mapping": {
    "*.md": "docs",
    "*.txt": "docs",
    "*.rst": "docs",
    "README*": "docs",
    "**/docs/*": "docs",
    "_docs/*": "docs",
    "*.test.sh": "test",
    "*.spec.sh": "test",
    "*test.sh": "test",
    "*spec.sh": "test",
    "*test*": "test",
    "*spec*": "test",
    "*.json": "config",
    "*.yml": "config",
    "*.yaml": "config",
    "*.toml": "config",
    "*.ini": "config",
    ".env*": "config",
    "Dockerfile": "config",
    "docker-compose*": "config",
    "*.sh": "script",
    "*.bash": "script",
    "*.zsh": "script",
    "_scripts/*": "script",
    "**/scripts/*": "script",
    ".gitignore": "ci",
    ".gitattributes": "ci",
    ".github/*": "ci",
    "**/.github/*": "ci",
    "package.json": "deps",
    "pnpm-lock.yaml": "deps",
    "requirements.txt": "deps",
    "Gemfile": "deps",
    "Gemfile.lock": "deps",
    "*.css": "style",
    "*.scss": "style",
    "*.sass": "style",
    "*.less": "style"
  }
}
